<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.shopping.model">
    <!-- class对应java实体类，table对应数据库中的表 -->
    <class name="Client" table="client">
    	
    	<id name="cno" column="cno">
    	<!-- 主键(id)自增 -->
    		<generator class="increment"></generator>
    	</id>
    	<property name="cname" column="cname"></property>
    	<property name="cpassword" column="cpassword"></property>
    	<property name="cclass" column="cclass"></property>
    	<property name="csex" column="csex"></property>
    	<property name="cage" column="cage"></property>
    	<property name="cphone" column="cphone"></property>
    	<property name="caddress" column="caddress"></property>
    </class>


</hibernate-mapping>